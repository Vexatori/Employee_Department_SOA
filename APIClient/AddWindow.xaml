<Window x:Class="APIClient.AddWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:APIClient"
        mc:Ignorable="d"
        Title="AddWindow" Height="450" Width="800">
    <Grid>
        <StackPanel x:Name="spAddEmployee" >
            <Label Content="Name" Margin="5,5,5,5"/>
            <TextBox x:Name="tbName" Margin="5,5,5,5"/>
            <Label Content="Second_name" Margin="5,5,5,5"/>
            <TextBox x:Name="tbSecond_name" Margin="5,5,5,5"/>
            <Label Content="Age" Margin="5,5,5,5"/>
            <TextBox x:Name="tbAge" Margin="5,5,5,5"/>
            <Label Content="DepartmentId" Margin="5,5,5,5"/>
            <TextBox x:Name="tbDepartmentId" Margin="5,5,5,5"/>
            <Button x:Name="btnSave" Content="Ок" Margin="5" Click="BtnSave_Click"/>
            <Button x:Name="btnCancel" Content="Cancel" Margin="5" Click="BtnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
